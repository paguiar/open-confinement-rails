<!DOCTYPE html>
<html>
  <head>
    <title><%= I18n.translate('platform_name') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="banner">
      <%= link_to I18n.t('views.layouts.link_home'), root_path %>
    </div>
    <div id="session">
      <% if user_signed_in? %>
        <%= I18n.t('views.layouts.signed_in', user: current_user.email) %>
        |
        <%= link_to I18n.t('views.layouts.edit'), edit_user_registration_path %>
        |
        <%= link_to(I18n.t('views.layouts.sign_out'), destroy_user_session_path, method: :delete) %>
      <% else %>
        <%= link_to I18n.t('views.layouts.sign_up'), new_user_registration_path %>
        |
        <%= link_to I18n.t('views.layouts.sign_in'), new_user_session_path %>
      <% end %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
